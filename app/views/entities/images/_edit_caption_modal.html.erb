<turbo-frame id="modal">
  <div class="modal" role="dialog" data-controller="modal" data-action="keyup@window->modal#closeWithKeyboard">
    <div class="modal-dialog image-modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Update Image Caption</h5>
          <%= button_tag "", data: { action: "modal#close", aria_label: "Close" }, type: "button", class: "btn-close" %>
        </div>
        <div class="modal-body">
          <%= form_with(model: image, url: "/images/#{image.id}/update", method: "post", data: { turbo: false }) do |image_form| %>
            <div class="input-group">
              <%= image_form.text_field :caption, class: 'form-control' %>
              <button type="submit" class="btn btn-outline-primary">Submit</button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</turbo-frame>
