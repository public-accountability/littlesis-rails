<!DOCTYPE html>
<html>
    <head>
	<title><%= raw page_title %></title>
	<%= stylesheet_link_tag    "toolkit", media: "all" %>
	<%= javascript_include_tag "toolkit", media: "all"  %>
	<%#= facebook_meta %>
    </head>
    <body>

	<% if content_for? :article_view %>
	    <nav class="navbar navbar-default navbar-static-top">
		<div class="navbar-container container">
		    
		    <div class="navbar-image">
			<a href="https://littlesis.org/toolkit">
			    <%= image_tag "map_the_power_text.jpg"%>
			</a>
		    </div>

		    <div id="navbar" class="hidden-xs pull-right">
			<ul class="nav navbar-nav">
			    <%= render partial: 'links' %>
			</ul>
		    </div><!-- #navbar / .nav-collapse -->
		</div>
	    </nav>
	    
	    <div style="margin-top: 1em"></div>
	<% elsif content_for? :table_of_contents %>
	    <!-- Table of Contents -->
	<% else %>
	    <!--  -->
	<% end %>
	
	<div class="container" id="container">
	    <%= yield %>
	    <% if content_for? :article_view %>
		<%= link_to "BACK TO TABLE OF CONTENTS", toolkit_path, class: 'toc-link'%>
	    <% end %>
	    <div style="margin-bottom: 2em"></div>
	</div>

	
	<% if content_for? :table_of_contents %>
	    <%= render partial: 'footer' %>
	<% end %>


    </body>
</html

