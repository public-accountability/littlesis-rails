<% content_for(:page_title, @relationship.name) %>

<div class="row mb-3 mt-3">
  <div class="col">
    <h1 class="relationship-title-link" >
      <%=  link_to @relationship.name, relationship_path(@relationship), class: "link-blue" %>
    </h1>
  </div>
</div>

<% if user_signed_in? && current_user.editor? %>
  <div class="row mb-3">
    <%= render partial: 'actions' %>
  </div>
<% end %>

<div id="relationship-page" class="row">
  <div class="col-12 col-sm-6">
    <div class="row">
      <div class="col">
        <%= render partial: 'subtitle', locals: { relationship: @relationship } %>
      </div>
    </div>

    <div class="row top-1em">
      <div class="col mr-4">
        <%= render partial: 'details', locals: { details: @relationship.details } %>
      </div>
    </div>
  </div> <%# end left column %>

  <div class="col-12  col-sm-4 offset-sm-1">
    <%= render partial: 'sidebar' %>
  </div>
  <turbo-frame id="relationship-modal">
  </turbo-frame>
</div>
