<% content_for(:page_title) { "#{t('littlesis.littlesis')} - Profiling the powers that be" } %>
<% content_for(:head) do  %>
  <%= og_tags(title: 'LittleSis', url: 'https://littlesis.org', image: 'https://littlesis.org/images/system/lilsis-logo-trans-200.png') %>
  <meta property="og:description" content="LittleSis is a free database of who knows who in business and government">
<% end %>

<div class="row mt-4" id="homepage-who-we-are-row">
  <div class="col-sm-12 col-lg-9">
    <div class="row">
      <h1>LittleSis<span style="color: #cc5454;">*</span> <%= t('pages.home.littlesis_is') %></h1>
      <div style="font-weight: 300; font-size: 14px; color: #cc5454;"><span style="font-size: 16px; font-weight: bold;">*</span> <%= t 'pages.home.opposite_of_big_brother' %></div>
    </div>

    <div class="row row-cols-1 row-cols-sm-2 mt-3">
      <div class="col pe-4 pe-md-0">
        <%= render partial: 'newsletter_signup_form' %>
      </div>
      <div class="col mt-2 mt-md-0 mb-2 mb-md-0">
        <%= render partial: 'social_media_buttons' %>
      </div>
    </div>
  </div>

  <div class="col-sm-12 col-lg-3 mt-sm-3 mt-lg-0">
    <%= render partial: 'dots_connected' %>
  </div>
</div>

