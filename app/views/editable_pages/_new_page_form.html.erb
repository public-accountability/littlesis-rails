<%#
locals: page [ActiveRecord], url [string]
creates a form for page with two fields: 'name' and 'title'
%>

<div class="row">
  <div class="col-sm-8">
    <%= form_for page, url: url do |f| %>
      <div class="form-group">
	<%= f.label :name, 'Page Name' %>
	<%= f.text_field :name, class: 'form-control', required: true %>
      </div>
      
      <div class="form-group">
	<%= f.label :title, 'Page Title' %>
	<%= f.text_field :title, class: 'form-control' %>
      </div>
      <%= f.submit 'submit', class: 'btn btn-default' %>
    <% end %>
  </div>
</div>
